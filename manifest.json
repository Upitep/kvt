{
  "name": "Kvalood Tools",
  "version": "0.1",
  "description": "Helper for Tinkoff Investments",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "management",
    "declarativeContent",
    "storage",
    "notifications",
    "https://*.tinkoff.ru/terminal/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.tinkoff.ru/terminal/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at":  "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Kvalood Tools",
    "default_popup": "popup.html"
  }
}
